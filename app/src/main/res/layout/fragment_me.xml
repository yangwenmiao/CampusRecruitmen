<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divider_line">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/me_info_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_me_head"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/me_photo" />

                <TextView
                    android:id="@+id/tv_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Himoko"
                    android:textSize="25dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rg_me_choose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rb_me_jianzhi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="我的兼职"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_line"></View>

                    <RadioButton
                        android:id="@+id/rb_me_jianli"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="我的简历"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_line"></View>

                    <RadioButton
                        android:id="@+id/rb_me_shoucang"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="我的收藏"
                        android:textSize="20dp"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_line"></View>

                    <RadioButton
                        android:id="@+id/rb_me_pianhao"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="我的偏好"
                        android:textSize="20dp"

                        />


                    <RadioButton
                        android:id="@+id/rb_me_kefu"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="联系客服"
                        android:textSize="20dp"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_line"></View>

                    <RadioButton
                        android:id="@+id/rb_me_fankui"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="投诉与反馈"
                        android:textSize="20dp"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_line"></View>

                    <RadioButton
                        android:id="@+id/rb_me_version"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="版本信息"
                        android:textSize="20dp"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_line"></View>

                    <RadioButton
                        android:id="@+id/rb_me_set"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/me_item_background"
                        android:button="@null"
                        android:paddingLeft="15dp"
                        android:text="设置"
                        android:textSize="20dp"

                        />

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
